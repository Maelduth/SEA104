{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .flip-card {
            background-color: transparent;
            width: 100%;
            height: 300px;
            perspective: 1000px;
            margin-bottom: 20px;
        }
        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.6s;
            transform-style: preserve-3d;
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            border-radius: 15px; /* Coins arrondis */
        }
        .flip-card-front, .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 15px; /* Coins arrondis */
        }
        .flip-card-front {
            background: linear-gradient(to bottom, #a8e063, #56ab2f); /* Dégradé de vert clair à vert foncé */
            color: black;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            padding: 20px;
            box-sizing: border-box;
        }
        .flip-card-back {
            background-color: #2980b9;
            color: white;
            transform: rotateY(180deg);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .flip-card:hover .flip-card-inner {
            transform: rotateY(180deg);
        }
        .card-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
        }
        .card-container .col-md-4 {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }
        .header-title {
            color: pink; /* Couleur du texte en rose */
            font-family: 'Dancing Script', cursive;
            text-decoration: underline; /* Souligner le texte */
            font-size: 48px; /* Augmenter la taille du texte */
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center header-title">Mes Loisirs et Passions</h1>
    <div class="row card-container">
        <div class="col-md-4">
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <h2>Programmation</h2>
                        <p>J'aime créer des applications web et mobiles.</p>
                    </div>
                    <div class="flip-card-back">
                        <img src="{{ asset('path/to/photo1.jpg') }}" class="img-fluid" alt="Programmation">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <h2>Lecture</h2>
                        <p>Je lis des livres techniques et scientifiques.</p>
                    </div>
                    <div class="flip-card-back">
                        <img src="{{ asset('path/to/photo2.jpg') }}" class="img-fluid" alt="Lecture">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="flip-card">
                <div class="flip-card-inner">
                    <div class="flip-card-front">
                        <h2>Sports</h2>
                        <p>Je pratique le football et le tennis.</p>
                    </div>
                    <div class="flip-card-back">
                        <img src="{{ asset('path/to/photo3.jpg') }}" class="img-fluid" alt="Sports">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}