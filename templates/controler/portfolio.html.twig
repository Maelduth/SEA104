{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .header-container {
            text-align: center;
            margin-top: 20px;
        }
        .portfolio-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            margin-top: 30px;
            flex-wrap: wrap;
        }
        .flip-card {
            background-color: transparent;
            width: 200px;
            height: 300px;
            perspective: 1000px;
            position: relative;
            margin: 10px; /* Ajoute un espace entre les cartes */
        }
        .flip-card-inner {
            position: relative;
            width: 100%;
            height: 100%;
            text-align: center;
            transition: transform 0.6s;
            transform-style: preserve-3d;
        }
        .flip-card.flipped .flip-card-inner {
            transform: rotateY(180deg);
        }
        .flip-card-front, .flip-card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 10px;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }
        .flip-card-front {
            background-color: #3498db;
            color: white;
            font-size: 24px;
            font-weight: bold;
        }
        .flip-card-back {
            background-color: #2ecc71;
            color: white;
            transform: rotateY(180deg);
            padding: 20px;
        }
        .flip-card-back button {
            margin-top: 10px;
            padding: 10px;
            background: white;
            color: #2ecc71;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
        }
        .flip-card-back button:hover {
            background: #27ae60;
            color: white;
        }
        .iframe-container {
            display: none;
            width: 60%;
            height: 80vh;
            margin: 20px auto;
            border: 2px solid black;
            background: transparent;
        }
        .iframe-container iframe {
            width: 100%;
            height: 100%;
            border: none;
            background: transparent;
        }
    </style>
{% endblock %}

{% block body %}
