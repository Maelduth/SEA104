{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .header-title {
            font-size: 72px;
            color: #ffffff;
            text-transform: uppercase;
            margin-bottom: 30px;
            text-decoration: none; /* Supprime la soulignure */
        }
        .row {
            height: calc(100vh - 100px); /* Hauteur totale de la page moins le titre */
        }
        .personal-info {
            color: #333;
            padding: 20px;
            display: flex;
            flex-direction: column;
            align-items: center; /* Centrer les éléments */
            border-radius: 10px;
        }
        .personal-info img {
            max-width: 150px;
            border-radius: 50%;
            margin-bottom: 20px;
        }
        .personal-info ul {
            list-style: none;
            padding: 0;
            text-align: center; /* Centrer le texte */
        }
        .personal-info ul li {
            margin-bottom: 10px;
            font-size: 18px;
        }
        .right-column {
            display: flex;
            flex-direction: column;
            justify-content: flex-start; /* Aligner les boutons et contenus en haut */
            gap: 20px; /* Espacement entre les boutons */
            height: 100%;
        }
        .button-group {
            display: flex;
            flex-direction: column;
            gap: 20px; /* Augmente l'espacement entre les boutons */
        }
        .button-group button {
            width: 100%;
            font-size: 18px;
        }
        .cv-section {
            display: none; /* Masqué par défaut */
        }
        .cv-section ul {
            list-style: none;
            padding: 0;
            margin-top: 10px; /* Ajout d'espace entre le bouton et le contenu */
        }
        .cv-section ul li {
            margin-bottom: 10px;
            font-size: 16px;
        }
        .header-text {
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
            text-align: center;
            background: none;
        }
        .footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
            color: black;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center header-title">Curriculum Vitae</h1>
    
    <!-- En-tête avec du texte -->
    <div class="header-text">
