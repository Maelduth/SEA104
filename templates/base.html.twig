<!DOCTYPE html>
<html>
 <head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/flatly/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;700&display=swap">
    {% block stylesheets %}
    <style>
        body {
            background: linear-gradient(to right, rgb(230, 232, 235), #6610f2);
            color: white;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .container {
            padding: 20px;
            border-radius: 10px;
            flex: 1;
        }
        .header-title {
            color: pink;
            font-family: 'Dancing Script', cursive;
            text-decoration: underline;
            font-size: 48px;
        }
        .info-list {
            color: black;
            font-size: 28px;
            font-family: 'Dancing Script', cursive;
            line-height: 2;
            margin-top: 20px;
        }
        .info-list .highlight {
            text-decoration: underline;
        }
        .footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
        .photo img {
            max-width: 150px;
            border-radius: 50%;
        }
        .more-info-title {
            font-family: 'Dancing Script', cursive;
            font-size: 36px;
            color: pink;
            text-decoration: underline;
        }
    </style>
    {% endblock %}
 </head>
 <body>
 <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
  <div class="container-fluid">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link {% if app.request.get('_route') == 'app_home' %}active{% endif %}" href="{{ path('app_home') }}" data-fr="Home" data-en="Home">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if app.request.get('_route') == 'app_portfolio' %}active{% endif %}" href="{{ path('app_portfolio') }}" data-fr="Portfolio" data-en="Portfolio">Portfolio</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if app.request.get('_route') == 'app_cv' %}active{% endif %}" href="{{ path('app_cv') }}" data-fr="CV" data-en="CV">CV</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if app.request.get('_route') == 'app_passion' %}active{% endif %}" href="{{ path('app_passion') }}" data-fr="Passions" data-en="Passions">Passions</a>
        </li>
      </ul>
    </div>
  </div>
 </nav>
 {% block body %}{% endblock %}
 {% block javascripts %}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const translateButton = document.getElementById('translate-button');
            let isTranslated = false;

            if (translateButton) {
                translateButton.addEventListener('click', function () {
                    const elementsToTranslate = document.querySelectorAll('[data-fr], [data-en]');
                    elementsToTranslate.forEach(element => {
                        if (isTranslated) {
                            element.innerHTML = element.getAttribute('data-fr');
                        } else {
                            element.innerHTML = element.getAttribute('data-en');
                        }
                    });
                    isTranslated = !isTranslated;
                });
            }
        });
    </script>
 {% endblock %}
 </body>
</html>